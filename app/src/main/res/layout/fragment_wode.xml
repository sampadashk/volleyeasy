<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_wode"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_myInfo"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/wodeziliao"
                android:textColor="#000000"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img"
                android:layout_alignParentRight="true"
                android:src="@drawable/xiangyou_grey"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img"
                android:layout_marginRight="5dp"
                android:id="@+id/ConfirmInfo"
                android:textSize="13sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:id="@+id/layout_mydeal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/mydeal"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/xiangyou_grey"
                android:layout_alignParentRight="true"
                android:id="@+id/img_two"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img_two"
                android:layout_marginRight="5dp"
                android:text="@string/seemydeal"
                android:textSize="13sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:id="@+id/layout_language"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/language_set"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/xiangyou_grey"
                android:layout_alignParentRight="true"
                android:id="@+id/img_three"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/language"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img_three"
                android:layout_marginRight="5dp"
                android:text="@string/language"
                android:textSize="13sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

