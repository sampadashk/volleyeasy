<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_search"/>


    <LinearLayout
        android:id="@+id/search_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:paddingLeft="10dp"
                android:text="@string/searchResult"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

        <ImageView

            android:background="#EAEAEA"

            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <ListView
            android:background="#ffffff"
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <RelativeLayout
            android:id="@+id/none_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView

                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="@string/noResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/search_lishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:paddingLeft="10dp"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lishi"/>


        </RelativeLayout>


        <ListView
            android:id="@+id/list_search_lishi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff">

        </ListView>


        <ImageView

            android:background="#EAEAEA"
            android:id="@+id/Img_three"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />


        <RelativeLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#ffffff"
            android:id="@+id/delete_history"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/center_text"
                android:text="@string/deleteLishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/center_text"
                android:layout_marginRight="5dp"
                android:src="@drawable/delete_lishi"/>
        </RelativeLayout>




    </LinearLayout>



    <ImageView
        android:id="@+id/Img_gotocart"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EAEAEA"/>

    <RelativeLayout
        android:id="@+id/goToCart"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:id="@+id/submit"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/roundsubmit"
            android:text="@string/go_to_cart"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="25dp" />


    </RelativeLayout>



</LinearLayout>