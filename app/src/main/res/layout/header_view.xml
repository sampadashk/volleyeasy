<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/add_shouhuo"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:clickable="true"
            android:background="@drawable/login_button_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/xuanzeshouhuo"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/shouhuoAdress"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxEms="10"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:id="@+id/add_fapiao"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:clickable="true"
            android:background="@drawable/login_button_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="13sp"
                android:text="@string/xuanzefapiao"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/billingAdress"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="10"
                android:textSize="13sp"
                android:textColor="#666"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:id="@+id/chooseData"
            android:clickable="true"
            android:background="@drawable/login_button_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="13sp"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:text="@string/songhuotime"
                android:textStyle="bold"
                android:id="@+id/time_songhuo"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="13sp"
                android:text="@string/xuanzeriqi"
                android:layout_centerVertical="true"
                android:textColor="#666"
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:id="@+id/add_beizhu"
            android:background="@drawable/login_button_selector"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="13sp"
                android:paddingLeft="15dp"
                android:id="@+id/asd"
                android:layout_centerVertical="true"
                android:text="@string/beizhu"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:id="@+id/beizhu_text"
                android:textSize="13sp"
                android:maxEms="10"
                android:textColor="#666"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/add_beizhu"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:id="@+id/ordernum"
                android:textStyle="bold"
                android:text="@string/ordernum"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/num"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/ordernum"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/edit"
                android:textStyle="bold"
                android:text="@string/edit"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_below="@id/order"
            android:id="@+id/line"
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />


        <RelativeLayout
            android:background="#ffffff"
            android:clickable="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/line"
            android:id="@+id/leibie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:id="@+id/product"
                android:text="@string/product"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/unitprice"
                android:text="@string/unitprice"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_width="55dp"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/product"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/quantity"
                android:text="@string/quantity"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_toRightOf="@id/unitprice"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/price"
                android:text="@string/price"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_width="55dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>