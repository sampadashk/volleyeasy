<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/header"
        >

        <LinearLayout
            android:gravity="center"
            android:id="@+id/back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:paddingLeft="1dp"
                android:clickable="true"
                android:src="@drawable/xiangzuo"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:text="@string/myInfo"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="15dp"
            style="@style/text_title"
            android:layout_gravity="center"
            android:id="@+id/name"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="12dp" />
        <TextView
            android:textColor="#ffffff"
            android:layout_width="30dp"


            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>


    </LinearLayout>
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/myAccount"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/one"
            android:src="@drawable/xiangyou_grey"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/one_text"
            android:textSize="13sp"
            android:textColor="#333"
            android:layout_toLeftOf="@id/one"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:id="@+id/comPanyInfo"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/comPanyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/two"
            android:src="@drawable/xiangyou_grey"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textSize="13sp"
            android:textColor="#333"
            android:id="@+id/two_text"
            android:layout_toLeftOf="@id/two"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:id="@+id/peisongAddress"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/huowupeisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/three"
            android:src="@drawable/xiangyou_grey"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textSize="13sp"
            android:textColor="#333"
            android:id="@+id/three_text"
            android:layout_toLeftOf="@id/three"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:id="@+id/fapiaoAddress"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/fapiaopeisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/four"
            android:src="@drawable/xiangyou_grey"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textSize="13sp"
            android:textColor="#333"
            android:id="@+id/four_text"
            android:layout_toLeftOf="@id/four"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</LinearLayout>