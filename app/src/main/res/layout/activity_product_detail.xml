<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"

    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    >


    <RelativeLayout
        android:background="#ffffff"

        android:id="@+id/second"


        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/bkbutton"
            android:src="@drawable/garrb"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_centerInParent="true"

            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_below="@id/viewPager"
            android:layout_centerInParent="true"



            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"


        android:orientation="vertical">


        <TextView
            android:id="@+id/nameDetail"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#000000"


            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView

            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unitprice"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="2å…ƒ"
                android:textColor="#ee2400"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#ee2400"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ee2400"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/available"
                android:textColor="#259b24" />
        </LinearLayout>


        <Button
            android:id="@+id/collect"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_bg"
            android:text="@string/collect"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/buyByCtn"
            android:layout_width="match_parent"

            android:layout_height="35dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/button_bgy"

            android:text="@string/gotozhengxiang"
            android:textColor="@android:color/white" />


        <RelativeLayout
            android:id="@+id/discount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#ee2400" />


        </RelativeLayout>


        <ImageView

            android:id="@+id/img_one"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="#eaeaea" />
        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="130dp"


            android:overScrollMode="always"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"

            android:id="@+id/scbar"
            android:fillViewport="true"


            android:scrollbars="vertical"

            android:visibility="visible">


            <LinearLayout
                android:id="@+id/showDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:text="@string/detail"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/origin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/origin"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/origin"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000" />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/decription_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/specification"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/decripetion"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/specification"
                    android:layout_width="wrap_content"
                    android:text="@string/decripetion"

                    android:layout_height="wrap_content"
                    android:textColor="#000000" />
                />


            </LinearLayout>
        </ScrollView>



    </LinearLayout>



    <ImageView
        android:layout_above="@id/four"


        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />



    <RelativeLayout
        android:id="@+id/four"
        android:layout_marginTop="5dp"

        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/fuhao"
            android:textSize="15dp"
            android:textColor="#ee2400"
            android:text="$"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#ee2400"
            android:layout_centerVertical="true"
            android:id="@+id/total_price"
            android:text="0.0"
            android:layout_toRightOf="@id/fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/youhui_layout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/total_price"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <TextView
                android:textColor="#000000"

                android:id="@+id/youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/yuan"
                android:textColor="#000000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/havePrice"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/reduce"
                android:src="@drawable/jianhao"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <EditText
                android:textSize="15dp"
                android:inputType="numberDecimal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/reduce"
                android:id="@+id/orderQuantity"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/orderQuantity"
                android:layout_marginLeft="5dp"
                android:id="@+id/add"
                android:src="@drawable/jiahao"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>

    </RelativeLayout>






</RelativeLayout>